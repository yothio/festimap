<div id="masonry-grid" class="row">
  <div class="col s6 m4">
    <div class="card">
      <div class="card-image">
        <%= image_tag "background1.jpg" %>
        <span class="card-title"><%= @event.name %></span>
      </div>
      <div class="card-content">
        <p><%= @event.description %></p>
      </div>
    </div>
  </div>
</div>
<div id="masonry-grid" class="row">
  <div class='row'>
    <% @event.map.split(',').each_with_index do |item, i| %>
      <div class='col s1'>
        <div class="card">
          <div class="card-image">
            <% if item == '' %>
              <%= image_tag  "white.jpeg" %>
            <% elsif item == '0' %>
              <%= link_to  "新しいコンテンツを作成しよう", new_admin_event_content_path(event_id: @event.id, event_item_position: i), id: 'download-button', class: 'btn-large waves-effect waves-light teal lighten-1' %>
            <% else %>
              <%= link_to(admin_event_content_path(event_id: params[:id], id: item)) do %>
                <div class="card">
                  <div class="card-image">
                    <p><%= image_tag @event.contents.find(item).image.variant(combine_options:{resize:"480x480^",crop:"480x480+0+0",gravity: :center}).processed %></p>   
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>